<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sq_color_primary</item>
        <item name="colorPrimaryDark">@color/sq_color_primary_dark</item>
        <item name="colorAccent">@color/sq_color_accent</item>
        <item name="android:navigationBarColor">@color/sq_color_primary_dark</item>

        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/sq_color_primary_dark</item>
    </style>

</resources>
