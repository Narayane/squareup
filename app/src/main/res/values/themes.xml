<resources>

    <style name="SQTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sq_color_primary</item>
        <item name="colorPrimaryDark">@color/sq_color_primary_dark</item>
        <item name="colorAccent">@color/sq_color_accent</item>
        <item name="colorControlHighlight">@color/sq_color_orange_a700</item>
        <item name="android:textSize">@dimen/sq_size_font_body</item>
        <item name="android:textColor">@color/sq_color_text_primary</item>

        <item name="editTextStyle">@style/SQTheme.Widget.EditText</item>
        <item name="buttonStyle">@style/SQTheme.Widget.Button</item>
        <item name="android:listViewStyle">@style/SQTheme.Widget.ListView</item>
        <!--<item name="autoCompleteTextViewStyle">@style/Widget.SquareUp.EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.SquareUp.EditText</item>-->
    </style>

    <style name="SQTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeStyle">@style/SQTheme.Widget.ActionMode</item>
    </style>

    <style name="SQTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SQTheme.Popup" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SQTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-24dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
</resources>