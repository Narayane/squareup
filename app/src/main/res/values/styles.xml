<resources>

    <style name="SQTheme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/sq_color_accent</item>
    </style>

    <style name="SQTheme.Widget.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/sq_size_font_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">#bdbdbd</item>
    </style>

    <style name="SQTheme.Widget.Button" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/sq_color_accent</item>
        <item name="android:textColor">@color/sq_color_white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SQTheme.Widget.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/sq_size_font_subhead</item>
    </style>

    <style name="SQTheme.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sq_size_font_body</item>
    </style>

    <style name="SQTheme.TextAppearance.Bold" parent="SQTheme.TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SQTheme.TextAppearance.Italic" parent="SQTheme.TextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SQTheme.TextAppearance.Condensed.Bold" parent="SQTheme.TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SQTheme.TextAppearance.SubHead.Bold" parent="SQTheme.TextAppearance.Bold">
        <item name="android:textSize">@dimen/sq_size_font_subhead</item>
    </style>

    <style name="SQTheme.TextAppearance.SubHead.Condensed.Bold" parent="SQTheme.TextAppearance.Condensed.Bold">
        <item name="android:textSize">@dimen/sq_size_font_subhead</item>
    </style>

    <style name="SQTheme.TextAppearance.HeadLine" parent="SQTheme.TextAppearance">
        <item name="android:textSize">@dimen/sq_size_font_headline</item>
    </style>

    <style name="SQTheme.TextAppearance.Caption.Italic" parent="SQTheme.TextAppearance">
        <item name="android:textSize">@dimen/sq_size_font_caption</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
