<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/sq_item_deal_participants_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:checked="true"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sq_item_deal_participants_list_imageview_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/sq_item_deal_participants_list_checkbox"
        app:srcCompat="@drawable/sq_ic_person_24dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sq_item_deal_participants_list_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/sq_item_deal_participants_list_imageview_picture"
        android:layout_toStartOf="@+id/sq_item_deal_participants_list_edittext_amont"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/sq_item_deal_participants_list_edittext_amont"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionDone"
        android:gravity="end"
        android:text="0,0 â‚¬"/>

</RelativeLayout>