<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="horizontal"
              android:padding="16dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sq_item_events_list_textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/sq_item_events_list_textview_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="from 01/05/2015"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/sq_item_events_list_textview_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="to 03/05/2015"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/sq_item_events_list_textview_participants_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 participant"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sq_item_events_list_textview_amout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:text="0,00 â‚¬"/>

</LinearLayout>