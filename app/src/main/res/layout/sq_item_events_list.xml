<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="4dp"
                                    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sq_item_events_list_layout_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sq_item_events_list_textview_name"
                    style="@style/SQTheme.TextAppearance.HeadLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Name"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sq_item_events_list_textview_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="from 01/05/2015"
                    android:textColor="@color/sq_color_text_secondary"
                    android:textIsSelectable="false"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sq_item_events_list_textview_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="to 03/05/2015"
                    android:textColor="@color/sq_color_text_secondary"
                    android:textIsSelectable="false"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sq_item_events_list_textview_participants_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/sq_color_text_secondary"
                    android:text="0 participant"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/sq_item_events_list_textview_amout"
                style="@style/SQTheme.TextAppearance.SubHead.Condensed.Bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="0,00 â‚¬"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sq_color_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/sq_item_events_list_button_edit"
                style="@style/SQTheme.Widget.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/sq_color_text_primary"
                android:text="Modifier"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/sq_item_events_list_button_more"
                style="@style/SQTheme.Widget.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sq_ic_overflow_24dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>