<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/sq_height_navigationview"
              android:gravity="bottom"
              android:orientation="vertical"
              android:paddingBottom="@dimen/sq_margin_activity_vertical"
              android:paddingLeft="@dimen/sq_margin_activity_horizontal"
              android:paddingRight="@dimen/sq_margin_activity_horizontal"
              android:paddingTop="@dimen/sq_margin_activity_vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sq_widget_drawer_button_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Connexion"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sq_widget_drawer_button_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"
        android:text="dÃ©connexion"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sq_widget_drawer_imageview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sq_widget_drawer_textview_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sq_margin_activity_vertical"
        android:text="John Doe"
        style="@style/SQTheme.TextAppearance"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sq_widget_drawer_textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="john.doe@noname.com"
        style="@style/SQTheme.TextAppearance"/>

</LinearLayout>
