<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/sq_height_navigationview"
              android:gravity="bottom"
              android:orientation="vertical"
              android:paddingBottom="@dimen/sq_margin_activity_vertical"
              android:paddingLeft="@dimen/sq_margin_activity_horizontal"
              android:paddingRight="@dimen/sq_margin_activity_horizontal"
              android:paddingTop="@dimen/sq_margin_activity_vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sq_margin_activity_vertical"
        android:text="John Doe"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="john.doe@noname.com"/>

</LinearLayout>
