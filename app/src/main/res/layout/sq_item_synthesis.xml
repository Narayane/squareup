<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="4dp"
                                    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/sq_item_synthesis_imageview_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/sq_ic_person_24dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_name"
            style="@style/SQTheme.TextAppearance.HeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/sq_item_synthesis_imageview_picture"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:text="Name"
            android:textIsSelectable="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_paid_amount_label"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sq_item_synthesis_textview_name"
            android:layout_toEndOf="@+id/sq_item_synthesis_imageview_picture"
            android:gravity="center_vertical"
            android:text="payé"
            android:textIsSelectable="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_paid_amount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sq_item_synthesis_textview_name"
            android:layout_toEndOf="@+id/sq_item_synthesis_textview_paid_amount_label"
            android:gravity="end|center_vertical"
            android:text="0,00 €"
            android:textIsSelectable="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_owed_amount_label"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sq_item_synthesis_textview_paid_amount_label"
            android:layout_toEndOf="@+id/sq_item_synthesis_imageview_picture"
            android:gravity="center_vertical"
            android:text="dû"
            android:textIsSelectable="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_owed_amount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sq_item_synthesis_textview_paid_amount"
            android:layout_toEndOf="@+id/sq_item_synthesis_textview_owed_amount_label"
            android:gravity="end|center_vertical"
            android:text="100 000,00 €"
            android:textIsSelectable="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_synthesis_textview_balance"
            style="@style/SQTheme.TextAppearance.SubHead.Condensed.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sq_item_synthesis_textview_paid_amount"
            android:layout_alignBottom="@+id/sq_item_synthesis_textview_owed_amount"
            android:layout_alignParentEnd="true"
            android:gravity="end|center_vertical"
            android:text="10 000,00 €"
            android:textIsSelectable="false"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>