<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sq_widget_appbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/SQTheme.ActionBar">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/sq_widget_appbar_layout_collapsing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sq_height_toolbar_collapsing"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginBottom="64dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/sq_widget_appbar_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7"
            android:tint="@color/sq_color_text_primary"
            app:srcCompat="@drawable/sq_img_placeholder_landscape"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/sq_widget_appbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:gravity="top"
            app:popupTheme="@style/SQTheme.Popup"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/sq_widget_appbar_tablayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            app:tabIndicatorColor="?attr/colorAccent"
            app:tabIndicatorHeight="4dp"/>
    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>