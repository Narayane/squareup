<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/sq_margin_activity_vertical"
                android:paddingEnd="@dimen/sq_margin_activity_horizontal"
                android:paddingStart="@dimen/sq_margin_activity_horizontal"
                android:paddingTop="@dimen/sq_margin_activity_vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sq_item_recyclerview_event_deals_imageview_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/sq_margin_activity_horizontal"
        android:padding="8dp"
        android:background="@drawable/sq_shape_circle"
        android:tint="@color/sq_color_white"
        app:srcCompat="@drawable/sq_ic_home_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/sq_item_recyclerview_event_deals_imageview_type"
        android:layout_toStartOf="@+id/sq_item_recyclerview_event_deals_textview_amount">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_recyclerview_event_deals_textview_hour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/sq_margin_activity_vertical"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sq_item_recyclerview_event_deals_textview_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/sq_margin_activity_vertical"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sq_item_recyclerview_event_deals_textview_amount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:layout_marginStart="@dimen/sq_margin_activity_horizontal"
        android:text="10 000,00 â‚¬"/>

</RelativeLayout>