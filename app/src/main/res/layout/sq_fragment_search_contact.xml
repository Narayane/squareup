<LinearLayout
    android:id="@+id/sq_fragment_search_contact_layout_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sq_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sq_fragment_search_contact_layout_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/sq_fragment_search_contact_imageview_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/sq_ic_group_24dp"/>

        <com.sebastien.balard.android.squareup.ui.widgets.chips.SQChipsView
            android:id="@+id/sq_fragment_search_contact_chipsview_participants"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/sq_fragment_search_contact_imageview_participants"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/SQTheme.TextAppearance.Caption.Italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sq_color_text_secondary"
        android:layout_alignStart="@+id/sq_fragment_search_contact_chipsview_participants"
        android:layout_below="@+id/sq_fragment_search_contact_chipsview_participants"
        android:text="@string/sq_message_info_add_participants"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="56dp"
        android:background="#bdbdbd"
        android:layout_marginBottom="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sq_fragment_search_contact_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>